<h1>Listing Menu Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_items.each do |menu_item| %>
      <tr>
        <td><%= menu_item.number %></td>
        <td><%= menu_item.name %></td>
        <td><%= menu_item.price %></td>
        <td><%= link_to 'View', menu_item, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_menu_item_path(menu_item), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Delete', menu_item, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Menu item', new_menu_item_path, class: 'btn btn-primary' %>
